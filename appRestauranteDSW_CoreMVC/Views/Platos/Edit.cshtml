@model appRestauranteDSW_CoreMVC.Models.Plato

@{
    ViewData["Title"] = "Editar Plato";
    var categorias = ViewBag.Categorias as List<appRestauranteDSW_CoreMVC.Models.CategoriaPlato>;
}

<h2>Editar Plato</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="id" />

            <div class="form-group mb-3">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="precio_plato" class="control-label"></label>
                <input asp-for="precio_plato" class="form-control" />
                <span asp-validation-for="precio_plato" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Imagen actual</label><br />
                @if (!string.IsNullOrEmpty(Model.imagen))
                {
                    <img src="@Model.imagen" alt="@Model.nombre" width="100" class="img-thumbnail mb-2" />
                }
                <br />
                <label>Nueva imagen (opcional)</label>
                <input type="file" name="ImagenFile" class="form-control" accept="image/*" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="categoria_plato_id" class="control-label">Categoría</label>
                <select asp-for="categoria_plato_id" class="form-control"
                        asp-items="@(new SelectList(categorias, "id", "nombre", Model.categoria_plato_id))">
                    <option value="">-- Seleccione una categoría --</option>
                </select>
                <span asp-validation-for="categoria_plato_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
