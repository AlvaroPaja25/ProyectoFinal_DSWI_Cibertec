@model IEnumerable<appRestauranteDSW_CoreMVC.Models.Plato>

@{
    ViewData["Title"] = "Platos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Platos</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Crear Nuevo Plato
    </a>
</div>

<table id="tablaPlatos" class="table table-striped table-hover table-bordered align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.nombre)</th>
            <th>@Html.DisplayNameFor(model => model.precio_plato)</th>
            <th>@Html.DisplayNameFor(model => model.imagen)</th>
            <th>@Html.DisplayNameFor(model => model.categoria_plato_id)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td>S/. @item.precio_plato</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.imagen))
                    {
                        <img src="@item.imagen" alt="@item.nombre" width="80" height="80" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Sin imagen</span>
                    }
                </td>
                <td>
                    @if (ViewBag.CategoriasDic.ContainsKey(item.categoria_plato_id))
                    {
                        @ViewBag.CategoriasDic[item.categoria_plato_id]
                    }
                    else
                    {
                        <span class="text-muted">Sin categoría</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                        <i class="bi bi-pencil-square fs-5"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-outline-info btn-sm me-1" title="Detalles">
                        <i class="bi bi-eye fs-5"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash fs-5"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
