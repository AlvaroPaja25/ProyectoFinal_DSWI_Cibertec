@model IEnumerable<appRestauranteDSW_CoreMVC.Models.Plato>

@{
    ViewData["Title"] = "Platos";
}

<h2>Listado de Platos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Plato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.nombre)</th>
            <th>@Html.DisplayNameFor(model => model.precio_plato)</th>
            <th>@Html.DisplayNameFor(model => model.imagen)</th>
            <th>@Html.DisplayNameFor(model => model.categoria_plato_id)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td>S/. @item.precio_plato</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.imagen))
                    {
                        <img src="@item.imagen" alt="@item.nombre" width="80" height="80" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>
                    @if (ViewBag.CategoriasDic.ContainsKey(item.categoria_plato_id))
                    {
                        @ViewBag.CategoriasDic[item.categoria_plato_id]
                    }
                    else
                    {
                        <span class="text-muted">Sin categoría</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
