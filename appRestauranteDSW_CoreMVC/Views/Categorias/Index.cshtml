@model IEnumerable<appRestauranteDSW_CoreMVC.Models.CategoriaPlato>

@{
    ViewData["Title"] = "Categorías de Platos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Categorías de Platos</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Nueva Categoría
    </a>
</div>

<table class="table table-striped table-hover table-bordered align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.nombre)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.id)</td>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                        <i class="bi bi-pencil-square fs-5"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash fs-5"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
