@model appRestauranteDSW_CoreMVC.DTOs.EmpleadoRegisterDTO

@{
    Layout = null;
}

<form asp-action="Create" method="post">
    <div class="row">
        <!-- Columna 1: Datos del Empleado -->
        <div class="col-md-6">
            <h4>Datos del Empleado</h4>
            <div class="mb-3">
                <label asp-for="nombre" class="form-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="apellido" class="form-label"></label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="dni" class="form-label"></label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="telefono" class="form-label"></label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="cargo_id" class="form-label"></label>
                <select asp-for="cargo_id" class="form-control" asp-items="ViewBag.Cargos"></select>
                <span asp-validation-for="cargo_id" class="text-danger"></span>
            </div>
        </div>

        <!-- Columna 2: Datos del Usuario -->
        <div class="col-md-6">
            <h4>Datos del Usuario</h4>
            <div class="mb-3">
                <label asp-for="correo" class="form-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="contrasena" class="form-label"></label>
                <input asp-for="contrasena" type="password" class="form-control" />
                <span asp-validation-for="contrasena" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>

    <pre>@ViewBag.JsonEnviado</pre>
</form>

@if (!string.IsNullOrEmpty(ViewBag.mensaje))
{
    <div class="alert alert-danger mt-3">
        @ViewBag.mensaje
    </div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
