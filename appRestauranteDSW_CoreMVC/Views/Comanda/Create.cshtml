@model appRestauranteDSW_CoreMVC.Models.Comanda

@{
    ViewData["Title"] = "Nueva Comanda";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Nueva Comanda</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" id="comandaForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MesaId" class="form-label"></label>
                        <input asp-for="MesaId" class="form-control" name="MesaId" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmpleadoId" class="form-label"></label>
                        <input asp-for="EmpleadoId" class="form-control" name="EmpleadoId" readonly />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CantidadAsientos" class="form-label"></label>
                    <input asp-for="CantidadAsientos" class="form-control" name="CantidadAsientos" />
                    <span asp-validation-for="CantidadAsientos" class="text-danger"></span>
                </div>

                <hr />

                <h5>Agregar Producto</h5>
                <div class="row g-2 align-items-center mb-3" id="platoForm">
                    <div class="col-md-4">
                        <select id="CategoriaId" asp-items="ViewBag.Categorias" class="form-select">
                            <option value="">-- Seleccione Categoría --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select id="PlatoId" class="form-select">
                            <option value="">-- Seleccione Plato --</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" id="Cantidad" class="form-control" placeholder="Cantidad" min="1" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="PrecioUnitario" class="form-control" placeholder="Precio" readonly />
                    </div>
                    <div class="col-md-12 mt-2">
                        <input type="text" id="Observacion" class="form-control" placeholder="Observación (opcional)" />
                    </div>
                    <div class="col-md-1 mt-2">
                        <button type="button" class="btn btn-primary w-100" id="btnAgregarPlato">
                            <i class="bi bi-plus-circle">+ Agregar</i>
                        </button>
                    </div>
                </div>

                <div class="mb-3 text-end">
                    <label class="form-label fw-bold">Subtotal: S/. </label>
                    <input type="text" id="Subtotal" class="form-control d-inline-block w-auto text-end" value=" " readonly />
                    <input type="hidden" name="PrecioTotal" id="PrecioTotal" value="0.00" />
                </div>

                <hr />

                <h5>Detalles Agregados</h5>
                <div id="detalleContainer"></div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">Guardar Comanda</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const apiBaseUrl = "https://localhost:7296";
        let index = 0;

        // Filtrar platos por categoría
        $('#CategoriaId').on('change', function() {
            let categoriaId = $(this).val();
            if (!categoriaId) {
                $('#PlatoId').html('<option value="">-- Seleccione Plato --</option>');
                $('#PrecioUnitario').val('');
                return;
            }
            $.get(`${apiBaseUrl}/api/Platos/categoria/${categoriaId}`, function(data) {
                let options = '<option value="">-- Seleccione Plato --</option>';
                data.forEach(p => {
                    options += `<option value="${p.id}" data-precio="${p.precio_plato}" data-imagen="${p.imagen}">${p.nombre}</option>`;
                });
                $('#PlatoId').html(options);
                $('#PrecioUnitario').val('');
            });
        });

        // Mostrar precio al seleccionar plato
        $('#PlatoId').on('change', function() {
            let precio = $(this).find(':selected').data('precio') || '';
            $('#PrecioUnitario').val(precio);
        });

        function actualizarSubtotal() {
            let subtotal = 0;
            $('.detalle-row').each(function() {
                let cantidad = parseFloat($(this).find('input[name$=".Cantidad"]').val()) || 0;
                let precio = parseFloat($(this).find('input[name$=".PrecioUnitario"]').val()) || 0;
                subtotal += cantidad * precio;
            });
            $('#Subtotal').val(subtotal.toFixed(2));
            $('#PrecioTotal').val(subtotal.toFixed(2));
        }

        // Agregar plato al detalle
        $('#btnAgregarPlato').on('click', function() {
            let platoSelect = $('#PlatoId');
            let platoId = platoSelect.val();
            let nombre = platoSelect.find(':selected').text();
            let cantidad = $('#Cantidad').val();
            let precio = $('#PrecioUnitario').val();
            let observacion = $('#Observacion').val();
            let imagen = platoSelect.find(':selected').data('imagen') || '';

            if (!platoId || !cantidad || !precio) {
                alert("Debe seleccionar un plato válido y completar Cantidad y Precio");
                return;
            }

            let html = `
            <div class="card mb-3 detalle-row shadow-sm" data-index="${index}">
                <div class="row g-0 align-items-center">
                    <div class="col-md-2">
                        ${imagen ? `<img src="${imagen}" class="img-fluid rounded-start" alt="${nombre}">`
                                  : `<div class="text-muted text-center p-2">Sin imagen</div>`}
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h6 class="card-title">${nombre}</h6>
                            <p class="card-text mb-0">Cantidad: ${cantidad}</p>
                            <p class="card-text mb-0">Precio: S/. ${precio}</p>
                            <p class="card-text"><small class="text-muted">Obs: ${observacion}</small></p>
                        </div>
                    </div>
                    <div class="col-md-2 text-end pe-3">
                        <button type="button" class="btn btn-danger btn-sm remove-row mb-2">Eliminar</button>
                        <input type="hidden" name="Detalles[${index}].PlatoId" value="${platoId}" />
                        <input type="hidden" name="Detalles[${index}].NombrePlato" value="${nombre}" />
                        <input type="hidden" name="Detalles[${index}].Cantidad" value="${cantidad}" />
                        <input type="hidden" name="Detalles[${index}].PrecioUnitario" value="${precio}" />
                        <input type="hidden" name="Detalles[${index}].Observacion" value="${observacion}" />
                    </div>
                </div>
            </div>`;
            $('#detalleContainer').append(html);

            // Limpiar inputs
            $('#PlatoId').val('');
            $('#Cantidad').val('');
            $('#PrecioUnitario').val('');
            $('#Observacion').val('');

            index++;
            actualizarSubtotal();
        });

        // Eliminar plato del detalle
        $(document).on('click', '.remove-row', function() {
            $(this).closest('.detalle-row').remove();
            actualizarSubtotal();
        });

        // Antes de enviar el formulario
        $('#comandaForm').on('submit', function() {
            $('#PrecioTotal').val($('#Subtotal').val());
        });
    </script>
}
