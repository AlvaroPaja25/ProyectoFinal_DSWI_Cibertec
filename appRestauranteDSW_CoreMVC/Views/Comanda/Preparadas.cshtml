@model IEnumerable<appRestauranteDSW_CoreMVC.Models.Comanda>

@{
    ViewData["Title"] = "Comandas Preparadas";
}

<h2 class="mb-4 text-primary fw-bold">
    <i class="bi bi-cash-stack me-2"></i> Comandas Preparadas
</h2>

<div class="row g-4">
    @foreach (var comanda in Model)
    {
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-header bg-light border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-receipt-cutoff me-1 text-primary"></i>
                        Comanda #@comanda.Id
                    </h5>
                    <span class="badge bg-success px-3 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-check-circle-fill me-1"></i> Preparado
                    </span>
                </div>

                <div class="card-body">
                    <p class="mb-2">
                        <i class="bi bi-table me-2 text-secondary"></i>
                        <strong>Mesa:</strong> @comanda.MesaId
                    </p>
                    <p class="mb-2">
                        <i class="bi bi-people-fill me-2 text-secondary"></i>
                        <strong>Asientos:</strong> @comanda.CantidadAsientos
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-currency-dollar me-2 text-secondary"></i>
                        <strong>Total:</strong>
                        <span class="text-success fw-bold">S/ @((comanda.PrecioTotal ?? 0).ToString("0.00"))</span>
                    </p>
                </div>

                <div class="card-footer bg-white border-0 text-end">
                    <a asp-controller="Factura"
                       asp-action="Nuevo"
                       asp-route-comandaId="@comanda.Id"
                       class="btn btn-outline-primary btn-sm rounded-pill shadow-sm">
                        <i class="bi bi-file-earmark-text me-1"></i> Facturar
                    </a>
                </div>
            </div>
        </div>
    }
</div>