@model IEnumerable<appRestauranteDSW_CoreMVC.Models.Mesas>

@{
    ViewData["Title"] = "Mesas Disponibles";
}

<h2 class="mb-4 text-center">Seleccionar Mesa</h2>

<div class="row">
    @foreach (var mesa in Model)
    {
        var color = mesa.estado == "Disponible" ? "bg-success" : "bg-danger";
        var clickable = mesa.estado == "Disponible";
        var icon = mesa.estado == "Disponible" ? "bi-table" : "bi-person-fill-lock";
        var borderColor = mesa.estado == "Disponible" ? "border-success" : "border-danger";

        <div class="col-md-3 mb-4">
            <div class="card text-white @color shadow-lg border @borderColor rounded-3 h-100">
                <div class="card-body text-center d-flex flex-column justify-content-between">

                    <!-- Ícono grande -->
                    <i class="bi @icon display-3 mb-3"></i>

                    <h5 class="card-title fw-bold">Mesa @mesa.id</h5>
                    <p class="card-text mb-3">
                        <i class="bi bi-people-fill"></i> Asientos: @mesa.cantidad_asientos <br />
                        <i class="bi bi-info-circle"></i> Estado: @mesa.estado
                    </p>

                    @if (clickable)
                    {
                        <a class="btn btn-light btn-modern fw-semibold"
                           href="@Url.Action("Create", "Comanda", new { mesaId = mesa.id })">
                            <i class="bi bi-plus-circle"></i> Crear Comanda
                        </a>
                    }
                    else
                    {
                        <span class="badge bg-dark fs-6 p-2">
                            <i class="bi bi-x-circle"></i> Ocupada
                        </span>
                    }
                </div>
            </div>
        </div>
    }
</div>
