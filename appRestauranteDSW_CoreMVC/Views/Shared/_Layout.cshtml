@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - appRestauranteDSW_CoreMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h4 class="text-white">🍽 MaoMakis</h4>
        <hr class="text-white" />
        <ul class="nav nav-pills flex-column mb-auto">
            <li>
                <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="CategoriaPlatos" asp-action="Index">📂 Categorías de Platos</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Platos" asp-action="Index">🥘 Platos</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Clientes" asp-action="Index">👤 Clientes</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Comprobantes" asp-action="Index">🧾 Comprobantes</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Empleados" asp-action="Index">👨‍🍳 Empleados</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Mesas" asp-action="Index">🍴 Mesas</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="MetodosPago" asp-action="Index">💳 Métodos de Pago</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">🔑 Usuarios</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Establecimiento" asp-action="Edit" asp-route-id="MAKI001">🔑 Establecimiento</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="mt-auto">
            <div>
                &copy; 2025 - appRestauranteDSW_CoreMVC
            </div>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
