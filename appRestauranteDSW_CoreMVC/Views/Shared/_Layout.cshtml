@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaoMakis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estiloLayout.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <a asp-controller="Home" asp-action="Index"
           class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <img src="~/images/logoMaoMakis.jpg" alt="Logo MaoMakis"
                 class="logo-img" style="height:50px; width:auto; margin-right:10px;" />
            <span class="fs-4">MaoMakis</span>
        </a>
        <hr class="text-white" />

        <ul class="nav nav-pills flex-column mb-auto">
            <!-- Menú General -->
            <li>
                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> Inicio
                </a>
            </li>

            <!-- Gestión del Restaurante -->
            <li class="nav-item">
                <a class="nav-link text-white" data-bs-toggle="collapse" href="#gestionRestaurante" role="button" aria-expanded="false">
                    <i class="bi bi-building"></i> Gestión del Restaurante
                </a>
                <div class="collapse ps-3" id="gestionRestaurante">
                    <ul class="nav flex-column">
                        <li><a class="nav-link text-white" asp-controller="Categorias" asp-action="Index"><i class="bi bi-folder"></i> Categorías de Platos</a></li>
                        <li><a class="nav-link text-white" asp-controller="Platos" asp-action="Index"><i class="bi bi-basket"></i> Platos</a></li>
                        <li><a class="nav-link text-white" asp-controller="Clientes" asp-action="Index"><i class="bi bi-people"></i> Clientes</a></li>
                        <li><a class="nav-link text-white" asp-controller="Mesas" asp-action="Index"><i class="bi bi-table"></i> Mesas</a></li>
                        <li><a class="nav-link text-white" asp-controller="Empleados" asp-action="Index"><i class="bi bi-person-workspace"></i> Empleados</a></li>
                        <li><a class="nav-link text-white" asp-controller="Establecimiento" asp-action="Edit" asp-route-id="EST01"><i class="bi bi-shop"></i> Establecimiento</a></li>
                    </ul>
                </div>
            </li>

            <!-- Ventas -->
            <li class="nav-item">
                <a class="nav-link text-white" data-bs-toggle="collapse" href="#ventas" role="button" aria-expanded="false">
                    <i class="bi bi-cash-stack"></i> Ventas
                </a>
                <div class="collapse ps-3" id="ventas">
                    <ul class="nav flex-column">
                        <li><a class="nav-link text-white" asp-controller="Comanda" asp-action="Index"><i class="bi bi-card-checklist"></i> Generar Comanda</a></li>
                        <li><a class="nav-link text-white" asp-controller="Comanda" asp-action="Pendientes"><i class="bi bi-hourglass-split"></i> Comandas Pendientes</a></li>
                        <li><a class="nav-link text-white" asp-controller="Comanda" asp-action="Preparadas"><i class="bi bi-receipt"></i> Facturar Comandas</a></li>
                        <li><a class="nav-link text-white" asp-controller="Factura" asp-action="Index"><i class="bi bi-file-earmark-text"></i> Comprobantes</a></li>
                        <li><a class="nav-link text-white" asp-controller="MetodosPago" asp-action="Index"><i class="bi bi-credit-card"></i> Métodos de Pago</a></li>
                    </ul>
                </div>
            </li>

            <!-- Configuración -->
            <li class="nav-item">
                <a class="nav-link text-white" data-bs-toggle="collapse" href="#configuracion" role="button" aria-expanded="false">
                    <i class="bi bi-gear"></i> Configuración
                </a>
                <div class="collapse ps-3" id="configuracion">
                    <ul class="nav flex-column">
                        <li><a class="nav-link text-white" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-key"></i> Usuarios</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <!-- Panel superior de usuario -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="mb-3 d-flex justify-content-end">
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li>
                            <form asp-controller="Login" asp-action="Logout" method="post" class="dropdown-item">
                                <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="mt-auto py-3 border-top">
            <div class="container text-center">
                <h6 class="fw-bold mb-1">Maomakis</h6>
                <p class="mb-0">El mejor sabor de sushi en cada bocado</p>
                <small class="text-muted d-block mt-2">
                    &copy; 2025 Maomakis - Todos los derechos reservados
                </small>
            </div>
        </footer>


    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
